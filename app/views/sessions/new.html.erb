<div class="container">
  <div class="col-4" ">
		<div class="mb-3">
			<h1>Login Page</h1>
			<%= form_with url: login_path, class: 'form-control' do |f| %>
				<%# <%= f.label :username %>
				<%= f.text_field :username, class: 'form-control form-control-lg', placeholder: "Enter Your Username" %>
				<%# <%= f.label :password %>
				<%= f.password_field :password, class: 'form-control form-control-lg', placeholder: "Enter Your Password" %>
				<%= f.submit 'Login', class:'btn btn-success' %>
			<% end %>
		<hr>
					<%= link_to 'New User Registration', new_user_path, class:'btn btn-dark'%>

			<h5><strong>Login with Google:-</strong></h5>
			<%= button_to 'G', '/auth/google_oauth2' , class: 'fab fab-google fa-3x google btn-dark' %>
		</div>
	</div>
</div>